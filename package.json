{
	"name": "quadscript",
    "displayName": "QuadScript",
    "description": "Language support for Quadrilateral Cowboy script files.",
    "version": "0.0.1",
    "publisher": "thefyrewire",
	"icon": "images/icon.png",
	"license": "MIT",
	"engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Languages"
    ],
	"contributes": {
        "languages": [{
            "id": "quadscript",
            "aliases": ["QuadScript", "quadscript"],
            "extensions": [".script"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "quadscript",
            "scopeName": "source.script",
            "path": "./syntaxes/quadscript.json"
        }],
		"snippets": [{
            "language": "quadscript",
            "path": "./snippets/quadscript.json"
        }],
		"themes": [{
            "label": "QuadScript Theme",
            "scopeName": "vs-dark",
            "path": "./themes/quadscript-theme.json"
        }]
    },
	"scripts": {
		"postinstall": "cd server && npm install && cd ../client && npm install && cd ..",
		"compile": "tsc -p client/tsconfig.json && cd server && npm run installServer && cd .. && tsc -p server/tsconfig.json",
		"compile:client": "tsc -p client/tsconfig.json",
		"watch:client": "tsc -w -p client/tsconfig.json",
		"compile:server": "cd server && npm run installServer && cd .. && tsc -p server/tsconfig.json",
		"watch:server": "cd server && npm run installServer && cd .. && tsc -w -p server/tsconfig.json",
		"vscode:prepublish": "tsc"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^6.0.88",
		"typescript": "^2.5.2"
	}
}
